sigs <- ldply(fields, function(field) {
    formula.str <- paste("answer ~",field)
    pr0 <- polr(answer ~ 1, data=new.df.Q2)
    pr1 <- do.call("polr", list(formula = as.formula(formula.str), data=new.df.Q2))
